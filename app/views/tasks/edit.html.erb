<% provide(:title, "Edit Task") %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true) do |f| %>

      <%= f.label :title, class: "label-task" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :content, class: "label-task" %>
      <%= f.text_area :content, class: "form-control", rows: "5" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-lg btn-task" %>
      <%= link_to "キャンセル", user_tasks_path, class: "btn btn-default btn-lg btn-task" %>
    <% end %>
  </div>
</div>