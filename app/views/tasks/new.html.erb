<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages', {instance: @task} %>

      <%= f.label :title, class: "label-task" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :content, class: "label-task" %>
      <%= f.text_area :content, class: "form-control", rows: "5" %>
      
      <%= f.submit "新規作成", class: "btn btn-primary btn-lg btn-task" %>
    <% end %>
  </div>
</div>