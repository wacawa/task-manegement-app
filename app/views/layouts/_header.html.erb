<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "TaskApp", root_path, id: "logo" %>
    <nav class="navbar-default">
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to "Top", root_path, class: "header-item" %></li>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to "Users", '#', class: "header-item" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-item" data-toggle="dropdown">
              <%= @current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="c"><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "header-item" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
